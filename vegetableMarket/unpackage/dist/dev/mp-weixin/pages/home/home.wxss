/* 水平间距 */
.uni-margin-wrap {
  padding: 8rpx;
}
.swiper {
  border-radius: 8pux;
  overflow: hidden;
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.uni-bg-red {
  background: red;
}
.uni-bg-green {
  background: green;
}
.uni-bg-blue {
  background: blue;
}
.fish-grid {
  margin-top: 12rpx;
}
.grid-box {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}
.fish-card {
  display: flex;
  gap: 20rpx;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}
.fish-card-left {
  width: 200rpx;
  height: 200rpx;
  background: red;
  border-radius: 8rpx;
}
.fish-card-right {
  flex: 1;
}
.fish-card-right .top .title {
  font-weight: 600;
}
.fish-card-right .top .integral {
  color: #8e8e8e;
  font-size: 12px;
  margin-left: 20rpx;
}
.fish-card-right .middle {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  color: #8e8e8e;
  font-size: 12px;
}
.fish-card-right .middle text + text {
  margin-left: 20rpx;
}
.fish-card-right .bottom {
  margin-top: 32rpx;
}